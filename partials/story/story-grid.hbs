{{!-- Article  Grid Template--}}
<article class="story u-flex u-relative story--grid {{#if featured}}featured{{/if}}">
    {{!-- Story Image --}}
    <div class="story-image u-relative u-overflowHidden u-backgroundColorGrayLight">
        <span class="story-image-lazy u-absolute0 u-block story-img-bg {{#unless feature_image}}not-image{{else}}u-backgroundSizeCover{{/unless}}" data-original="{{feature_image}}"></span>
        {{!-- icon If is Video or Image / Gallery --}}
        {{#has tag="#video"}}
            <span class="media-type u-absolute i-play"></span>
        {{else}}
            {{#has tag="#image"}}
            <span class="media-type u-absolute i-photo"></span>
            {{/has}}
        {{/has}}

    </div>

    <div class="story-body u-flexColumn u-marginTop20">
        <div class="flow-meta u-fontSizeSmallest u-flexCenter">
            {{!-- primary tag --}}
            {{#if primary_tag}}
                <span class="story-category u-fontWeightBolder u-textUppercase">{{primary_tag.name}}</span>
                <span class="point">/</span>
            {{/if}}

            {{!-- DateTime --}}
            <span><time class="datetime" datetime="{{date format=" YYYY-MM-DD "}}">{{date published_at timeago="true"}}</time></span>
        </div>

        {{!-- Title --}}
        <h2 class="u-contentTitle u-fontSize20 u-lineHeightTight u-marginBottom10">
            <a href="{{url}}" class="u-relative zindex4">{{title}}</a>
        </h2>

        {{!-- excerpt --}}
        {{!-- <div class="story-lower u-relative u-overflowHidden u-flexColumnTop u-hide-after-mdf">
            <p class="story-excerpt">{{excerpt words="25"}}</p>
        </div> --}}
    </div>

    {{!-- Link Story Wrap --}}
    <a href="{{url}}" class="u-absolute0 u-zindex2"></a>
</article>
