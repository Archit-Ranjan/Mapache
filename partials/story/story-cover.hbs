<article class="st-cover u-relative u-floatLeft {{#if @first}}firts{{/if}}">
    <div class="st-cover-inner u-relative u-bgDark">
        {{!-- Imagenes --}}
        {{#if feature_image}}
            <a href="{{url}}">
                <img class="st-cover-img u-absolute u-image u-block lazyload blur-up"
                    src="{{img_url feature_image size="m"}}"
                    srcset="{{img_url feature_image size="xxs"}}"
                    data-srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w, {{img_url feature_image size="l"}} 1000w,"
                    data-sizes="(max-width: 1000px) 400px, 700px"
                    alt="{{title}}"
                />
            </a>
        {{/if}}

        <header class="st-cover-header u-absolute u-textColorWhite zindex2">
            {{!-- Category and Datetime partials/helper/helper-story-meta --}}
            {{> "helper/helper-story-meta"}}

            {{!-- Title --}}
            <h2 class="st-cover-title u-lineHeightTight u-fontSizeLarge u-md-fontSize22">
                <a href="{{url}}">{{title}}</a>
            </h2>
        </header>

        {{!-- link --}}
        {{!-- <a href="{{url}}" class="u-absolute0 zindex3"></a> --}}
    </div>
</article>