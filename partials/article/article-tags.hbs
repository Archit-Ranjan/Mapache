{{#if tags}}

<div class="post-tags u-marginTop30">
    {{#foreach tags}}
        <a href="{{url absolute="true"}}" title="{{name}}" class="button tag-button mapache-tracking" data-event-category="Article" data-event-action="Tags" data-event-label="{{name}}" data-event-non-interaction="1">{{name}}</a>
    {{/foreach}}
</div>

{{/if}}
